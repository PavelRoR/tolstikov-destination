@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.main-container
		width 60%
	.lets-item-text
		height 108px
	.packet
		max-width 490px
	.for-item
		height 210px
@media screen and (max-width 1199px)
	.main-container
		width 70%
	.lets-item-text
		height 122px
	.for-item
		height 222px
@media screen and (max-width 991px)
	.header-logo
		float: none
		margin 0 auto 3px
	.contacts
		text-align: center
		float: none
		line-height: 1.3
		.contact
			display: inline-block
			line-height: 1.4
	.main-container
		width 100%
	.for-item
		padding 20px
		height 283px
	.certs-title
		text-align: center
		margin 10px 0 20px
	.certs-img
		height 100px
@media screen and (max-width 767px)
	.main-title
		font-size: 34px
	.plan-item
		padding 30px
	.plan-item-1
		background-image: linear-gradient(to right,rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 100%),url("../img/backs/plan-img-1.jpg")
	.plan-item-2
		background-image: linear-gradient(to right,rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 100%),url("../img/backs/plan-img-2.jpg")
	.packet-body
		min-height 1px
	.prepayment-text
		text-shadow: 0 0 5px rgba(255,255,255,0.5),0 0 10px rgba(255,255,255,0.5),0 0 15px rgba(255,255,255,0.5),0 0 20px rgba(255,255,255,0.5)
	.for-item
		height auto
	.author-img
		margin 0 auto 30px
	.certs
		width 100%
		max-width 500px
		margin 0 auto
	.certs-img
		margin 5px auto
	.record-title-2
		margin-top: 30px
@media screen and (max-width 485px)
	#main
		padding 0 0 30px
	.header-logo
		width 70px
		margin-bottom: 0
	.contact
		font-size: 12px
		background-size: 14px
		line-height: 14px
		padding-left: 20px
		&&-email
			padding-left: 20px
	.main-container
		padding 20px 20px 30px
	.main-title
		font-size: 26px
	.main-subtitle
		font-size: 22px
		margin 10px 0 15px
	.main-info
		font-size: 18px
		span
			font-size: 20px
	.main-info:last-of-type
		margin-bottom: 30px
	#lets
		padding 30px 0 0
	.general-title
		font-size: 26px
		margin-bottom: 25px
	.button
		font-size: 18px
	#plan
	#prices
	#for
	#author
	#records
		padding 30px 0
	.plan-item-title
		font-size: 22px
	.cost
		font-size: 20px
		span
			font-size: 28px
	.prepayment-title
		font-size: 32px
	.prepayment-text
		font-size: 18px
	.timer-title
		font-size: 28px
		margin-top: 30px
		line-height: 1.3
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.author-title
		margin-bottom: 20px
	.records-text
		font-size: 20px
		margin-top: 25px
	footer
		padding 15px 0
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
	footer p
	.conditions
		font-size: 12px
@media screen and (max-width 385px)
	.main-title
		font-size: 20px
	.main-subtitle
		font-size: 18px
		line-height: 1.3
	.general-title
		font-size: 22px
	.lets-item-text
		height auto
	.plan-item
		padding 20px
	.plan-item-list li
		margin-left: 0
	.certs-img
		height 75px